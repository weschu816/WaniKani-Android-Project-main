<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/greetTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:layout_margin="8dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my_username"
        android:layout_margin="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/greetTV"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/lvlHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level(s): "
        android:layout_margin="8dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetTV"
        />
    <TextView
        android:id="@+id/lvlTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my_levels"
        android:layout_margin="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/lvlHeaderTV"
        app:layout_constraintTop_toBottomOf="@+id/nameTV"
        />
    <TextView
        android:id="@+id/timeRemainingHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Remaining until next Review: "
        android:layout_margin="8dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlHeaderTV"
        />
    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeRemainingHeaderTV"
        />
    <Chronometer
        android:id="@+id/assignment_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/timeRemainingHeaderTV"
        app:layout_constraintBottom_toBottomOf="@+id/timeRemainingHeaderTV"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
